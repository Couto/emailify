{
    "tasks": {
        "minify": {
            "exec": "mv {{entry}} ./tmp.js; closure --js=./tmp.js --js_output_file={{output}}; rm ./tmp.js;"
        },
        "makeScripts": [
            {
                "entry": "./index.js",
                "output": "./index.entry.js",
                "task": "combine"
            }
        ],
        "minifyAlLScripts": {
            "directory": "./",
            "find": {
                ".*\\.js$": {
                    "entry": "{{file}}",
                    "output:": "{{file}}",
                    "task": "minify"
                }
            }
        },
        "debug": [
            "makeScripts"
        ],
        "release": [
            "makeScripts",
            "minifyAllScripts"
        ]
    }
}